{
    "AWSEBDockerrunVersion": 2,
    "ContainerDefinitions": [
        {
            "name": "client",
            "image": "dockertuka/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "dockertuka/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "dockertuka/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "dockertuka/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort" : 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }

    ]

}